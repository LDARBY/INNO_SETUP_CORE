function MyWinVer(): String;
begin 
  CASE ExpandConstant('{#My_Apv_V_Bits}') OF
  '32' : BEGIN
           Result := 'Windows';
         END;
  '64' : BEGIN
           Result := 'Windows 64 bit';
         END;
  END;
end; 
//--------------------------------------------------------------------------------------------------------
function MyInstDir(): String;
begin 
  CASE ExpandConstant('{#My_Apv_V_Bits}') OF
  '32' : BEGIN
           Result := 'C:\Program Files (x86)';
         END;
  '64' : BEGIN
           Result := 'C:\Program Files';
         END;
  END;
end; 
//--------------------------------------------------------------------------------------------------------
function MyRun(): String;
begin 
  CASE ExpandConstant('{#My_Apv_V_Bits}') OF
  '32' : BEGIN
           Result := 'RUN32';
         END;
  '64' : BEGIN
           Result := 'RUN64';
         END;
  END;
end; 
